<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#111111"
    tools:context="com.example.cloud.tp6.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textColor="#FFFFFF"
        android:id="@+id/timeTxt"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/webView"
        android:layout_toEndOf="@+id/button2"
        android:textAlignment="center"
        android:layout_alignStart="@+id/button2" />

    <WebView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/webView"
        android:layout_below="@+id/txtHtmlBtn"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/loadDataBtn"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date-Heure"
        android:id="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickDate" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Texte\nHTML"
        android:id="@+id/txtHtmlBtn"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button"
        android:onClick="onClickTxtHtml"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seismes\n LoadUrl"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:onClick="onClicLoadUrl"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seismes\nLoadData"
        android:id="@+id/loadDataBtn"
        android:layout_alignTop="@+id/button2"
        android:layout_alignParentEnd="true"
        android:onClick="onClickLoadData"/>
</RelativeLayout>
